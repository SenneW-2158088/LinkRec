@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
@prefix job:  <http://example.org/job/>
@prefix skill: <http://example.org/skill/>

# Skill hierarchy inference
[skillInference:
    (?skill1 rdfs:subClassOf ?category)
    (?job job:requiresSkill ?skill1)
    ->
    (?job job:requiresSkill ?category)
]

# Experience level inference
[experienceLevelInference:
    (?job job:yearsRequired ?years)
    (?level job:minYears ?min)
    (?level job:maxYears ?max)
    ge(?years, ?min)
    le(?years, ?max)
    ->
    (?job job:experienceLevel ?level)
]

# Skill equivalence inference
[skillEquivalence:
    (?skill1 job:equivalentTo ?skill2)
    (?job job:requiresSkill ?skill1)
    ->
    (?job job:requiresSkill ?skill2)
]

# If a job requires a skill, it also requires all of the skill's subskills
[titleHierarchy:
    (?title1 rdfs:subClassOf ?title2)
    (?job job:requiresTitle ?title2)
    ->
    (?job job:requiresTitle ?title1)
]
