@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:         <http://www.w3.org/2002/07/owl#>

@prefix foaf:        <http://xmlns.com/foaf/0.1/>
@prefix wd:  <http://www.wikidata.org/entity/> .
@prefix gn:  <https://www.geonames.org/ontology#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .

@prefix lr: <http://linkrec:8080/ontology/> .
@prefix user: <http://linkrec:8080/user/> .
@prefix experience: <http://linkrec:8080/experience/> .
@prefix requirement: <http://linkrec:8080/requirement/> .
@prefix education: <http://linkrec:8080/education/> .
@prefix job:  <http://linkrec:8080/job/> .
@prefix employer: <http://linkrec:8080/employer/> .

# TODOS:
# Include following ontologies in staging:
#  - https://github.com/lanthaler/vCardOntology/blob/master/Vcard.rdf

# USERS
lr:User a vcard:Individual ;
    a foaf::Person .
lr:hasEmail a rdf:Property ;
    owl:sameAs vcard:hasEmail ;
    owl:sameAs foaf::mbox .
lr:hasFirstName a rdf:Property ;
    owl:sameAs vcard:hasFirstName .
lr:hasLastName a rdf:Property ;
    owl:sameAs vcard:hasLastName .
lr:hasPhoneNumber a rdf:Property ;
    owl:sameAs vcard:hasTelephone ;
    owl:sameAs foaf::phone .
lr:hasWebPage a rdf:Property ;
    owl:sameAs foaf::page .
lr:hasGender a rdf:Property ;
    owl:sameAs vcard:hasGender ;
    owl:sameAs foaf:gender .
# see http://www.geonames.org/ontology/documentation.html
lr:hasLocation a rdf:Property . # -> lr:Location
lr:knows a rdf:Property ;
    owl:sameAs foaf:knows .
lr:hasJobSeekingStatus a rdf:Property .
lr:hasLanguage a rdf:Property ;
    owl:sameAs vcard:hasLanguage .
lr:hasExperience a rdf:Property . # -> lr:Experience
lr:hasEducation a rdf:Property . # -> lr:Education
lr:matchesRequirement a rdf:Property . # -> lr:Requirement

lr:JobSeekingStatus a rdfs:Class .
lr:ActivelyLooking rdfs:subClassOf lr:JobSeekingStatus ;
    rdfs:label "ActivelyLooking" .
lr:OpenToOffers rdfs:subClassOf lr:JobSeekingStatus ;
    rdfs:label "OpenToOffers" .
lr:NotLooking rdfs:subClassOf lr:JobSeekingStatus ;
    rdfs:label "NotLooking" .

# EMPLOYERS
lr:Employer a vcard:Individual ;
    a foaf:Organization .
lr:hasEmail a rdf:Property ;
    owl:sameAs vcard:hasEmail ;
    owl:sameAs foaf::mbox .
lr:hasFirstName a rdf:Property ;
    owl:sameAs vcard:hasFirstName .
lr:hasLastName a rdf:Property ;
    owl:sameAs vcard:hasLastName .
lr:hasPhoneNumber a rdf:Property ;
    owl:sameAs vcard:hasTelephone ;
    owl:sameAs foaf::phone .
lr:hasWebPage a rdf:Property ;
    owl:sameAs foaf::page .
lr:hasJob a rdf:Property . # -> lr:Job

# EXPERIENCE
lr:Experience a rdf:Class .
lr:hasProfession a rdf:Property ;
    owl:sameAs vcard:hasTitle . # wd:Q28640 or Profession
lr:hasDescription a rdf:Property ;
    owl:sameAs vcard:hasNote .
lr:hasYears a rdf:Property .
lr:hasCompany a rdf:Property .
# NOTE: should be generated by inference rules
lr:hasExperienceLevel a rdf:Property . # -> lr:ExperienceLevel

# REQUIREMENT
lr:Requirement a rdf:Class .
lr:hasProfession a rdf:Property ;
    owl:sameAs vcard:hasTitle . # wd:Q28640 or Profession
lr:requiredYears a rdf:Property . # only useful for professions
lr:hasLanguage a rdf:Property . # -> lr:Language
lr:hasEducationTitle a rdf:Property .
lr:hasDegree a rdf:Property . # education degree
lr:hasDescription a rdf:Property ;
    owl:sameAs vcard:hasNote .

# EDUCATION
lr:Education a rdf:Class .
lr:hasInstitution a rdf:Property .
lr:hasTitle a rdf:Property ;
    owl:sameAs vcard:hasTitle .
lr:hasDegree a rdf:Property .

lr:Entry a lr:ExperienceLevel ;
    lr:hasMinYears 0 ;
    lr:hasMaxYears 2 .
lr:Mid a lr:ExperienceLevel ;
    lr:hasMinYears 2 ;
    lr:hasMaxYears 5 .
lr:Senior a lr:ExperienceLevel ;
    lr:hasMinYears 5 ;
    lr:hasMaxYears 8 .
lr:Lead a lr:ExperienceLevel ;
    lr:hasMinYears 8 .

# LOCATION
lr:Location a rdf:Class .
lr:hasGeoName a rdf:Property ;
    owl:sameAs gn:name .
lr:hasAlternateGeoName a rdf:Property ;
    owl:sameAs gn:alternateName .

# JOB/VACANCY POST
lr:Job a rdf:Class .
lr:hasTitle a rdf:Property ;
    owl:sameAs foaf:title .
lr:hasRequirement a rdf:Property . # -> lr:Requirement
lr:hasLocation a rdf:Property ;
    owl:sameAs gn:name .
lr:isActive a rdf:Property . # -> boolean

# PROFESSIONS
lr:Profession a rdf:Class ;
    owl:sameAs wd:Q28640 . # professions
lr:subProfessionOf a rdf:Property ;
    owl:sameAs wd:P279 .

# Language
lr:Language a rdf:Class .
