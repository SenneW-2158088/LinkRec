@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:         <http://www.w3.org/2002/07/owl#>

@prefix foaf:        <http://xmlns.com/foaf/0.1/>
@prefix wd:  <http://www.wikidata.org/entity/> .
@prefix gn:  <https://www.geonames.org/ontology#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .

@prefix user: <http://linkrec:8080/ontology/user/> .
@prefix experience: <http://linkrec:8080/ontology/experience/> .
@prefix requirement: <http://linkrec:8080/ontology/requirement/> .
@prefix education: <http://linkrec:8080/ontology/education/> .
@prefix job:  <http://linkrec:8080/ontology/job/> .
@prefix skill:  <http://linkrec:8080/ontology/skill/> .
@prefix lr_user: <http://linkrec:8080/user/> .
@prefix lr_experience: <http://linkrec:8080/experience/> .
@prefix lr_requirement: <http://linkrec:8080/requirement/> .
@prefix lr_education: <http://linkrec:8080/education/> .
@prefix lr_job:  <http://linkrec:8080/job/> .
@prefix lr_skill:  <http://linkrec:8080/skill/> .

# TODOS:
# Include following ontologies in staging:
#  - https://github.com/lanthaler/vCardOntology/blob/master/Vcard.rdf

# USERS
user:User a vcard:Individual ;
    a foaf::Person .
user:hasEmail a rdf:Property ;
    owl:sameAs vcard:hasEmail ;
    owl:sameAs foaf::mbox .
user:hasName a rdf:Property ;
    owl:sameAs vcard:hasName ;
    owl:sameAs foaf::name .
user:hasPhoneNumber a rdf:Property ;
    owl:sameAs vcard:hasTelephone ;
    owl:sameAs foaf::phone .
user:hasWebPage a rdf:Property ;
    owl:sameAs foaf::page .
user:hasGender a rdf:Property ;
    owl:sameAs vcard:hasGender ;
    owl:sameAs foaf:gender .
# see http://www.geonames.org/ontology/documentation.html
user:hasLocation a rdf:Property ; # -> gn:name
    owl:sameAs vcard:hasGeo ;
    owl:sameAs foaf:based_near .
user:knows a rdf:Property ;
    owl:sameAs foaf:knows .
user:hasLanguage a rdf:Property ;
    owl:sameAs vcard:hasLanguage .
user:hasExperience a rdf:Property . # -> experience:experience
user:hasEducation a rdf:Property . # -> education:education

# EXPERIENCE
experience:Experience a rdf:Class .
experience:hasTitle a rdf:Property ;
    owl:sameAs vcard:hasTitle . # wd:Q28640 or Profession
experience:hasDescription a rdf:Property ;
    owl:sameAs vcard:hasNote .
experience:hasYears a rdf:Property .
experience:hasCompany a rdf:Property .
# NOTE: should be generated by inference rules
experience:hasExperienceLevel a rdf:Property . # -> experience:ExperienceLevel

# REQUIREMENT
requirement:Requirement a rdf:Class .
requirement:hasTitle a rdf:Property ;
    owl:sameAs vcard:hasTitle . # wd:Q28640 or Profession
requirement:hasDescription a rdf:Property ;
    owl:sameAs vcard:hasNote .
requirement:requiredYears a rdf:Property .
# you can also use experience:hasExperienceLevel for required level

experience:Entry a experience:ExperienceLevel ;
    experience:hasMinYears 0 ;
    experience:hasMaxYears 2 .
experience:Mid a experience:ExperienceLevel ;
    experience:hasMinYears 2 ;
    experience:hasMaxYears 5 .
experience:Senior a experience:ExperienceLevel ;
    experience:hasMinYears 5 ;
    experience:hasMaxYears 8 .
experience:Lead a experience:ExperienceLevel ;
    experience:hasMinYears 8 .

# JOB/VACANCY POST
job:Job a rdf:Class .
job:hasTitle a rdf:Property ;
    owl:sameAs foaf:title .
job:hasRequirement a rdf:Property . # -> requirement:Requirement
job:hasLocation a rdf:Property ; # -> gn:name
    owl:sameAs foaf:based_near .
job:isActive a rdf:Property . # -> boolean
job:hasEmployer a rdf:Property . # -> user:User

# SKILLS
skill:Skill a wd:Q28640 . # skills are professions!
skill:subSkillOf owl:sameAs wd:P279 . # subclass of

# EXAMPLES
wd:Q6859454 a skill:Skill ;
    skill:subSkillOf wd:Q183888 ;
    rdfs:label "Software Developer" .

wd:Q183888 a skill:Skill ;
    wd:P279 wd:Q1709010 ;
    skill:subSkillOf wd:Q1709010 ;
    rdfs:label "Software Engineer" .
